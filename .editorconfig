root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{md,yml}]
trim_trailing_whitespace = false

[*.{scss,styl}]
indent_size = 2

[*.{json,yaml}]
indent_size = 2

[*.{js,ts,vue,jsx,html,scss}]
indent_size = 2
